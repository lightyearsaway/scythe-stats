{
  "name": "scythe-stats",
  "version": "1.0.0",
  "description": "Repository for services related to scythe-stats",
  "repository": "https://github.com/shibrady/scythe-stats",
  "author": "Brady Shi",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev:server": "yarn ts-node-dev --inspect --respawn --transpileOnly --project server/tsconfig.json server/src/index.ts",
    "dev:bot": "yarn ts-node-dev --inspect --respawn --transpileOnly --project discord-bot/tsconfig.json discord-bot/src/index.ts",
    "build:server": "rimraf -rf server/dist && tsc --project server/tsconfig.json",
    "build:bot": "rimraf -rf discord-bot/dist && tsc --project discord-bot/tsconfig.json",
    "start:db": "docker run --rm --name scythe-stats-db -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=scythe -p 5432:5432 -d postgres:latest",
    "start:server": "node server/dist/index.js",
    "start:bot": "node discord-bot/dist/index.js",
    "reset:db": "yarn --cwd server sequelize-cli db:migrate:undo:all && yarn --cwd server sequelize-cli db:migrate && yarn --cwd server sequelize-cli db:seed:all",
    "graphql:codegen": "yarn --cwd server graphql:codegen",
    "sequelize-cli": "yarn --cwd server sequelize-cli",
    "install": "yarn --cwd server && yarn --cwd discord-bot"
  },
  "devDependencies": {
    "@types/node": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "^11.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4"
  }
}