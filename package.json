{
  "name": "scythe-stats",
  "version": "1.0.0",
  "description": "Repository for services related to scythe-stats",
  "repository": "https://github.com/shibrady/scythe-stats",
  "author": "Brady Shi",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev:db": "docker run --rm --name scythe-stats-db -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=scythe -p 5432:5432 -d postgres:latest",
    "dev:api": "yarn ts-node-dev --respawn --transpileOnly --project api/tsconfig.json api/src/index.ts",
    "dev:bot": "yarn ts-node-dev --respawn --transpileOnly --project bot/tsconfig.json bot/src/index.ts",
    "dev:site": "yarn --cwd site next",
    "build:api": "rimraf -rf api/dist && tsc --project api/tsconfig.json",
    "build:bot": "rimraf -rf bot/dist && tsc --project bot/tsconfig.json",
    "start:api": "node api/dist/index.js",
    "start:bot": "node bot/dist/index.js",
    "graphql:codegen": "yarn --cwd api graphql-codegen --config codegen.yml",
    "typeorm": "yarn --cwd api ts-node ./node_modules/typeorm/cli.js",
    "install": "yarn --cwd api && yarn --cwd bot"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "^11.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/node": "^13.5.0"
  }
}
